<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true">
        <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/content_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <!-- Card -->
            <android.support.v7.widget.CardView
                android:id="@+id/cardMain"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="3dp"
                card_view:cardUseCompatPadding="true"
                card_view:contentPadding="0dp"
                >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:src="@drawable/logo"
                />

                <!--   Name -->
                <TextView android:id="@+id/textView1"
                    android:background="@color/primary_darker"
                    android:layout_marginTop="150dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Ken Girisya"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="times new roman" />

                <TextView
                    android:id="@+id/textView2"
                    android:background="@color/primary_darker"
                    android:layout_marginTop="190dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="090 876 241"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_marginBottom="0dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="times new roman" />

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_below="@+id/cardMain"
                android:id="@+id/stamp_and_point"
                android:layout_marginTop="10dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <!-- stamps box -->

                <RelativeLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/well_stamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:padding="0dp"
                    >

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardMainWell"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="3dp"
                        card_view:contentPadding="20dp"
                        >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Stamps"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:fontFamily="times new roman"
                        android:textStyle="bold"
                        android:textSize="22dp"/>

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="1 / 12"
                        android:gravity="center"
                        android:textSize="20dip"/>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <!-- points box -->
                <RelativeLayout
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_below="@+id/well_stamp"
                    android:id="@+id/well_point"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="0dp">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardMainPoint"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        card_view:cardBackgroundColor="@color/white"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="3dp"
                        card_view:contentPadding="20dp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:text="Points"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:fontFamily="times new roman"
                            android:textStyle="bold"
                            android:textSize="22dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="100000"
                        android:gravity="center"
                        android:textSize="20dip"/>

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </RelativeLayout><!-- relative to stamp & point -->

            <!-- slideshow promo banner -->

            <!-- slideshow promo banner -->

        </RelativeLayout>
</ScrollView>
